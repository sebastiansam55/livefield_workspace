{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sync Live Fields",
            "type": "shell",
            "command": "./src/dist/livefield",
            "args":[
                "sync"
            ],
            "windows": {
                "command": "./src/dist/livefield.exe",
                "args":["sync"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }

        }
    ]
}